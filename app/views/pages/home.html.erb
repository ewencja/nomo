        <!-- LENGTH -->
        <div class="col-sx-6 col-offset-3">
          <h2>How long should the name be?</h2>
          <form action="length">
            <input type="checkbox" name="length" value="short">short<br>
            <input type="checkbox" name="length" value="medium">medium<br>
            <input type="checkbox" name="length" value="long">long<br>
          </form>
        </div>

      </div>
    </div>
  </div>


