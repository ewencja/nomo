<div class="background_image" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.pexels.com/photos/172256/pexels-photo-172256.jpeg');">
  <div class="banner-content">
    <div class="container text-center">
      <div class="row">
        <h1> Let's find your baby's name</h1>

        <br>
        <!-- GENDER -->
        <div class="col-sx-6 col-offset-3">

         <div class="search-form">
           <%= form_tag(:controller => "pages", :action => "results") do %>
           <!-- select boy or girl -->
           <%= label_tag( "Are you expecting a boy or girl?")%>
           <br>
           <%= select_tag :gender, options_for_select(@gender)%>
           <!-- select parents origins (plural!)-->
           <br>
           <br>
           <br>
           <%= label_tag( "What country is your country of origin?")%>
           <br>
           <%= select_tag :origin, options_for_select(@origin_names) %>
           <!-- select baby country -->
           <br>
           <br>
           <br>
           <%= label_tag( "What country will the baby most likely live in?")%>
           <br>
           <%= select_tag :origin, options_for_select(@origin_names) %>
           <!-- select short, medium long -->
           <br>
           <br>
           <br>
           <%= label_tag( "How long should your baby's name be?")%>
           <br>
           <%= select_tag :length, options_for_select(@length) %>
           <!-- submit selection criterias -->
           <br>
           <br>
           <br>
           <%= submit_tag("Search", :class => "btn btn-primary") %>
           <% end %>

      </div>
    </div>
  </div>


